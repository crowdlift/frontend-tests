{
  "name": "frontend-tests",
  "version": "0.1.0",
  "description": "Frontend Kit tests.",
  "private": true,
  "main": "./dist/index.js",
  "repository": "crowdlift/frontend-tests",
  "homepage": "https://github.com/crowdlift/frontend-tests",
  "scripts": {
    "build": "npm-run-all -p build:prod",
    "build:dev": "cross-env NODE_ENV=development BUILD_DIR=./dist/dev webpack --display-chunks --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --display-chunks --progress",
    "clean": "rimraf dist",
    "deploy": "./bin/deploy-gh.sh",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "lint": "eslint src *.js",
    "nightwatch": "./node_modules/.bin/nightwatch --config test/nightwatch.conf.js",
    "prebuild": "cross-env RELEASE=1 npm-run-all -p clean test",
    "serve": "./node_modules/.bin/http-server -p 2000 dist/",
    "start": "npm run dev",
    "test": "npm-run-all -p lint test:browser test:node",
    "test:browser": "cross-env NODE_ENV=test karma start",
    "test:node": "cross-env NODE_ENV=test mocha --require babel-register tests.node.js",
    "test:e2e": "./bin/boot-nightwatch.sh"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint-plugin-chai-expect": "^1.1.1",
    "frontend-kit": "github:crowdlift/frontend-kit",
    "karma": "^1.5.0",
    "karma-browserstack-launcher": "^1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "nightwatch": "^0.9.12",
    "selenium-standalone-bins": "github:crowdlift/selenium-standalone-bins#v1.0.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0"
  },
  "peerDependencies": {},
  "devDependencies": {}
}
